#include<stdio.h>
int main()
{
    float p,r,t;
    // Input for principal amount 
    printf("Enter the principal amount : ₹"); 
    scanf("%f",&p);
    
    // Input for rate
    printf("Enter the rate : ");
    scanf("%f",&r);
    
    // Input for time
    printf("Enter time : ");
    scanf("%f",&t);


    // Calculation for Simple interest
    float si;
    si = (p*r*t)/100;
    
    // To display the calculated Simple Interest
    printf("Simple interest is ₹%f",si);
    return 0;
}
